@page
@using Fanfic.Data
@model Fanfic.Areas.Identity.Pages.Account.Manage.TalesModel
@{

}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link rel="stylesheet" href="~/css/site.css" />

<div id="tales">
    <a href="#createTale" class="btn btn-success" data-toggle="modal"><span>Add New Tale</span></a>

    <!-- Create Tale Modal -->
    <div class="modal fade" id="createTale">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create a new tale</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>
                <form method="post" asp-page="Tales" asp-page-handler="CreateTale"
                      asp-route-pageNumber="@Model.PageInfo.Pagination.PageNumber"
                      asp-route-sortType="@Model.PageInfo.SortType"
                      asp-route-filterGanre="@Model.PageInfo.FilterGanre">

                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Ganre"></label>
                            <select asp-for="Input.Ganre" class="form-control" asp-items="@Html.GetEnumSelectList<Tale.TaleGanre>()">
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ShortDescription"></label>
                            <textarea class="form-control" asp-for="Input.ShortDescription"></textarea>
                            <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Add">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- -->
    <div class="container row">
        <div class="col-8">
            @if (Model.Tales.Count == 0)
            {
                <p>Tales not found</p>
            }
            else
            {
                @await Html.PartialAsync("_TalePartial", Model)
            }
        </div>
        <div class="col-4">
            <form method="get">
                <label>Filter by ganre:</label>
                <select name="filterGanre" asp-items="@Html.GetEnumSelectList<Tale.TaleGanre>()" class="form-control">
                    <option value="">All</option>
                </select>
                <label>Sort by:</label>
                <select name="sortType" asp-items="@Html.GetEnumSelectList<Fanfic.Services.Sorter.SortState>()" class="form-control">
                </select>
                <input type="submit" value="Filter" class="btn btn-outline-dark" />
            </form>
        </div>

    </div>

    @await Html.PartialAsync("_PaginationNavigation", Model.PageInfo)
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/star-rating/star-rating.min.js"></script>