@page
@using Fanfic.Data
@model Fanfic.Areas.Identity.Pages.Account.Manage.TalesModel
@{
}

<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
<link rel="stylesheet" href="~/css/site.css" />

<div id="tales">
    <form asp-page-handler="SortByRating" method="post">
        <button class="btn btn-default">sort by rating</button>
    </form>

    <form asp-page-handler="SortByCreationDate" method="post">
        <button class="btn btn-default">sort by creation date</button>
    </form>

    <a href="#createTale" class="btn btn-success" data-toggle="modal"><span>Add New Tale</span></a>

    <!-- Create Tale Modal -->
    <div class="modal fade" id="createTale">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Create a new tale</h4>
                    <button type="button" class="close" data-dismiss="modal">
                        <span>x</span>
                    </button>
                </div>
                <form method="post" asp-page="Tales" asp-page-handler="CreateTale">

                    <div class="modal-body">
                        <div class="form-group">
                            <label asp-for="Input.Name"></label>
                            <input asp-for="Input.Name" class="form-control" />
                            <span asp-validation-for="Input.Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Ganre"></label>
                            <select asp-for="Input.Ganre" class="form-control" asp-items="@Html.GetEnumSelectList<Tale.TaleGanre>()">
                            </select>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.ShortDescription"></label>
                            <textarea class="form-control" asp-for="Input.ShortDescription"></textarea>
                            <span asp-validation-for="Input.ShortDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="modal-footer">
                        <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
                        <input type="submit" class="btn btn-success" value="Add">
                    </div>
                </form>
            </div>
        </div>
    </div>
    <!-- -->
    <div class="container">
        @if (Model.Tales.Count == 0)
        {
            <p>You have no tales. Lets create a new one!</p>
        }
        else
        {
            @foreach (var tale in Model.Tales)
            {
                <div class="current-tale">
                    <form  asp-page-handler="RedirectToTaleDetails"  method="post">          
                        <button name="Id" value=@tale.Id>details</button>
                    </form>
                    <p>@tale.Id</p>
                    <p>@tale.Name</p>
                    <p>@tale.ShortDiscription</p>
                    <p>@tale.CreationTime.Date</p>

                </div>
            }
        }
    </div>
    
</div>